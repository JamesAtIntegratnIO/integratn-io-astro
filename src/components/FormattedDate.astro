---
interface Props {
    date: Date | string;
}

const { date: dateProp } = Astro.props;
const date = new Date(dateProp);
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
        })
    }
</time>
